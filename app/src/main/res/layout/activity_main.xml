<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom"
    android:padding="16dp"
    tools:context="com.somethingfun.jay.peanut.MainActivity">

    <Button
        android:id="@+id/samples"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/samples"
        />

    <Button
        android:id="@+id/bezier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bezier_curve"
        />

    <Button
        android:id="@+id/water_drop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/water_drop"
        />
</LinearLayout>
